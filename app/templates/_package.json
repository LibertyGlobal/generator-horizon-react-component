{
  "name": "<%= packageName %>",
  "version": "1.0.0",
  "description": "Horizon Component <%= packageName %>",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "npm run compileStyles && npm run compileJs && npm run bundle",
    "compileStyles": "node-sass <%= packageName %>.scss --output-style expanded > lib/<%= packageName %>.css",
    "compileJs": "babel src --out-dir lib",
    "bundle": "browserify index.js --standalone <%= globalVariableName %> -t browserify-shim -o lib/<%= packageName %>.bundle.js",
    "demo": "npm run demo-hint && http-server -p 9999",
    "demo-hint": "echo \"\\033[0;35m|---- Please open http://localhost:9999/demo/demo.html in your browser ----|\\033[0m\"",
    "test": "mocha test/**/*.js"
  },
  "keywords": [
    "template",
    "horizon4",
    "component",
    "react",
    "browserify",
    "es6"
  ],
  "license": "ISC",
  "devDependencies": {
    "babel": "^5.6.12",
    "browserify": "^10.2.4",
    "browserify-shim": "^3.8.9",
    "expect.js": "^0.3.1",
    "http-server": "^0.8.0",
    "mocha": "^2.2.5",
    "node-sass": "^3.2.0",
    "testdom": "^1.0.1"
  },
  "dependencies": {
    "react": "^0.13.3"
  },
  "browserify-shim": {
    "react": "global:React"
  }

}
